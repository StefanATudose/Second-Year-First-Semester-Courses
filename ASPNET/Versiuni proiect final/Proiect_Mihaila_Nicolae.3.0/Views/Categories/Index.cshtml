@{
    ViewBag.Title = "List of all Categories";
    Layout = "~/Views/Shared/_LayoutProject.cshtml";
}

<h2>@ViewBag.Title</h2>
<br />
@if (TempData.ContainsKey("message"))
{
    <h1>@ViewBag.message</h1>
}


<br />

@foreach (var category in ViewBag.Categories)
{
    @Html.Label("Categ_Name", "Category Name")
    <p>@category.Categ_Name</p>
    <a class="btn alert-success" href="/Categories/Show/@category.Categ_ID">Show Category</a>
    <a class="btn alert-success" href="/Categories/Edit/@category.Categ_ID">Edit Category</a>
    <br />
    <hr />
    <br />
}

<br />
<a class="btn btn-success" href="/Categories/New">Add a new category</a>
<br />




<!-- Pentru afisarea paginata -->
<div>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="@ViewBag.PaginationBaseUrl=1" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @for (int i = 1; i <= ViewBag.lastPage; i++)
            {
                <li class="page-item"> <a class="page-link" href="@ViewBag.PaginationBaseUrl=@i">@(i)</a> </li>
            }

            <li class="page-item">
                <a class="page-link" href="@ViewBag.PaginationBaseUrl=@(ViewBag.lastPage)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
