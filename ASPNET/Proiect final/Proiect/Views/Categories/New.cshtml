@{
    ViewBag.Title = "Add Category";
    Layout = "~/Views/Shared/_LayoutProject.cshtml";
}
@model Proiect.Models.Category


<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Categories", method: FormMethod.Post))
{

    @Html.Label("Categ_Name", "Category name")
    <br />

    @Html.TextBox("Categ_Name", null, new { @class = "form-control" })

    @Html.ValidationMessageFor(m => m.Categ_Name, null, new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-success" type="submit">Add Category</button>

}