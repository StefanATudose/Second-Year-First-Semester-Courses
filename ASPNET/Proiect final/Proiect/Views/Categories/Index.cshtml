@{
    ViewBag.Title = "List of all Categories";
    Layout = "~/Views/Shared/_LayoutProject.cshtml";
}

<h2>@ViewBag.Title</h2>
<br />
@if (TempData.ContainsKey("message"))
{
    <h1>@ViewBag.message</h1>
}


<br />
@if (ViewBag.Categories != null) { 
    @foreach (var category in ViewBag.Categories)
    {
        @Html.Label("Categ_Name", "Category Name")
        <p>@category.Categ_Name</p>
        <a class="btn alert-success" href="/Categories/Show/@category.Categ_ID">Show Category</a>
        @if (User.IsInRole("Admin"))
        {
            <a class="btn alert-success" href="/Categories/Edit/@category.Categ_ID">Edit Category</a>
        }
        <br />
        <hr />
        <br />
    }
}
else{
    <h1>There is no category yet!</h1>
}


<br />

<!--foarte important, eu nu stiam ca se poate asa!-->
@if(User.IsInRole("Admin"))
{
    <a class="btn btn-success" href="/Categories/New">Add a new category</a>
}


<br />




